local animate_property

animate_property = function(property)
	local to = math.random(-300, 300)
	local duration = math.random(1, 3)
	go.animate(".", property, go.PLAYBACK_ONCE_FORWARD, to, go.EASING_INOUTQUAD, duration, 0, function()
		animate_property(property)
	end)
end

function init(self)
	animate_property("position.x")
	animate_property("position.y")
end
